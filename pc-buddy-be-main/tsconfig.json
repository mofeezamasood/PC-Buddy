{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "lib": ["es6", "dom"],
    "module": "Node16",
    "moduleResolution": "Node16"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
